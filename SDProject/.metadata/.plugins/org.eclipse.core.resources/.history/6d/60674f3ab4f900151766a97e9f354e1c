package ctrl;

public class ClientRoutine extends Thread {
	
	public ClientRoutine(){
		
	}
	
	public void run() {
		Boolean isConnected = true;
		while (isConnected){
			System.out.println("CLIENT : Server listenning ...");
			try {
				Thread.sleep(2000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}   
}
